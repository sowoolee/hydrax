<mujoco model="cartpole">
  <option timestep="0.01" iterations="1" ls_iterations="5">
    <flag contact="disable" eulerdamp="disable"/>
  </option>

  <default>
    <default class="pole">
      <joint type="hinge" axis="0 1 0"  damping="2e-6"/>
      <geom type="capsule" fromto="0 0 -1 0 0 0" size="0.045" mass=".1"/>
    </default>
  </default>

  <worldbody>
    <light name="light" pos="0 0 6"/>
    <camera name="fixed" pos="0 -10 1" zaxis="0 -1 0"/>
    <camera name="lookatcart" mode="targetbody" target="cart" pos="0 -2 2"/>
    <geom name="rail1" type="capsule" pos="0  .07 1" zaxis="1 0 0" size="0.02 3"/>
    <geom name="rail2" type="capsule" pos="0 -.07 1" zaxis="1 0 0" size="0.02 3"/>
    <body name="cart" pos="0 0 1">
<!--      <joint name="slider" type="slide" limited="true" axis="1 0 0" range="-3.0 3.0" solreflimit="1.0 1" damping="1.0e-2"/>-->
    <joint name="slider" type="slide" axis="1 0 0" damping="1.0e-2"/>
      <geom name="cart" type="box" size="0.2 0.15 0.1" mass="1"/>
      <body name="pole_1" childclass="pole">
        <joint name="hinge_1" damping="1.0e-3"/>
        <geom name="pole_1"/>
        <site name="tip" pos="0 0 -1"/>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="slide" joint="slider" gear="10" ctrllimited="true" ctrlrange="-1 1" />
  </actuator>
</mujoco>
